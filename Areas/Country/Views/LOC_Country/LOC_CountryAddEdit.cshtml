@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model StudentProject.Areas.Country.Models.LOC_CountryModel
<div class="app-main__inner">
    <div class="tabs-animation">
        <div class="mb-3 card">
            <div class="card-header-tab card-header">
                <div class="card-header-title font-size-lg text-capitalize fw-normal">
                    <i class="header-icon lnr-charts icon-gradient bg-happy-green"></i>
                    Country
                </div>
            </div>

            <div class="card-body">
                <form method="post" asp-area="Country" asp-controller="LOC_Country" asp-action="Save_Country">
                    <input type="hidden" asp-for="CountryID" />
                    <div class="mb-3">
                        <label class="form-label" for="countryName">Country Name</label>
                        <input class="form-control" asp-for="CountryName" type="text" placeholder="Country Name" data-sb-validations="required" />
                        <span asp-validation-for="CountryName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="countryCode">Country Code</label>
                        <input class="form-control" asp-for="CountryCode" type="text" placeholder="Country Code" data-sb-validations="required" />
                        <span asp-validation-for="CountryCode" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a class="btn btn-danger">Cancle</a>
                        </div>
                    </div>
                </form>
                @{
                    if (ViewData["message"] != "")
                    {
                        <div class="mt-3">
                            <span class="bg-success text-white bg-light-success fw-bold h3">
                                @ViewData["message"]
                            </span>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}