@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model StudentProject.Areas.Student.Models.StudentModel

<div class="app-main__inner">
    <div class="tabs-animation">
        <div class="mb-3 card">
            <div class="card-header-tab card-header">
                <div class="card-header-title font-size-lg text-capitalize fw-normal">
                    <i class="header-icon lnr-charts icon-gradient bg-happy-green"></i>
                    Studet Add/Edit
                </div>
            </div>

            <div class="card-body">
                <form method="post" asp-area="Student" asp-controller="Student" asp-action="Save_Student">
                    <input type="hidden" asp-for="StudentID" />
                    <div class="mb-3">
                        <label class="form-label" for="country">City</label>
                        <select class="form-control form-select" asp-for="CityID" asp-items="@(new SelectList(ViewBag.CityList,"CityID","CityName"))">
                            <option disabled selected>Select City</option>
                        </select>
                        <span asp-validation-for="CityID" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="country">Branch</label>
                        <select class="form-control form-select" asp-for="BranchID" asp-items="@(new SelectList(ViewBag.BranchList,"BranchID","BranchName"))">
                            <option disabled selected>Select Branch</option>
                        </select>
                        <span asp-validation-for="BranchID" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="studentname">Student Name</label>
                        <input class="form-control" asp-for="StudentName" type="text" placeholder="Student Name" data-sb-validations="required" />
                        <span class="text-danger" asp-validation-for="StudentName"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="studentmobileno">Student Mobile No.</label>
                        <input class="form-control" asp-for="MobileNoStudent" type="text" placeholder="Student Mobile No" data-sb-validations="required" />
                        <span class="text-danger" asp-validation-for="MobileNoStudent"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="email">Email</label>
                        <input class="form-control" asp-for="Email" type="email" placeholder="Email" data-sb-validations="required" />
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="fathermobileno">Father Mobile No.</label>
                        <input class="form-control" asp-for="MobileNoFather" type="text" placeholder="Father Mobile No" data-sb-validations="required" />
                        <span class="text-danger" asp-validation-for="MobileNoFather"></span>
                    </div>
                    <div class="position-relative mb-3">
                        <label for="address" class="form-label">Address</label>
                        <textarea name="address" asp-for="Address" id="address" class="form-control"></textarea>
                        <span class="text-danger" asp-validation-for="Address"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="birthdate">Birth Date</label>
                        <input type="date" asp-for="BitrhDate" class="form-control" data-toggle="datepicker-icon">
                        <span class="text-danger" asp-validation-for="BitrhDate"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="age">Age</label>
                        <input class="form-control" asp-for="Age" type="number" placeholder="Age" data-sb-validations="required" />
                        <span class="text-danger" asp-validation-for="Age"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="password">Gender</label>
                        <input class="form-control" asp-for="Gender" type="text" placeholder="Gender" data-sb-validations="required" />
                        <span class="text-danger" asp-validation-for="Gender"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="password">Password</label>
                        <input class="form-control" asp-for="Password" type="password" placeholder="Password" data-sb-validations="required" />
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a class="btn btn-danger">Cancle</a>
                        </div>
                    </div>
                </form>
                @{
                    if (ViewData["message"] != "")
                    {
                        <div class="mt-3">
                            <span class="bg-success text-white bg-light-success fw-bold h3">
                                @ViewData["message"]
                            </span>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}