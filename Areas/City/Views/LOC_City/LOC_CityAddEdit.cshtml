@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model StudentProject.Areas.City.Models.LOC_CityModel
<div class="app-main__inner">
    <div class="tabs-animation">
        <div class="mb-3 card">
            <div class="card-header-tab card-header">
                <div class="card-header-title font-size-lg text-capitalize fw-normal">
                    <i class="header-icon lnr-charts icon-gradient bg-happy-green"></i>
                    City
                </div>
            </div>

            <div class="card-body">
                <form method="post" asp-area="City" asp-controller="LOC_City" asp-action="Save_City">
                    <input type="hidden" asp-for="CityID" />
                    <div class="mb-3">
                        <label class="form-label" for="cityName">City Name</label>
                        <input class="form-control" asp-for="CityName" type="text" placeholder="City Name" data-sb-validations="required" />
                        <span asp-validation-for="CityName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="state">State</label>
                        <select class="form-control form-select" asp-items=@(new SelectList(ViewBag.StateList,"StateID","StateName")) asp-for="StateID">
                            <option disabled selected>Select State</option>
                        </select>
                        <span asp-validation-for="StateID" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="country">Country</label>
                        <select class="form-control form-select" asp-items=@(new SelectList(ViewBag.CountryList,"CountryID","CountryName")) asp-for="CountryID">
                            <option disabled selected>Select Country</option>
                        </select>
                        <span asp-validation-for="CountryID" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="cityCode">City Code</label>
                        <input class="form-control" asp-for="CityCode" type="text" placeholder="City Code" data-sb-validations="required" />
                        <span asp-validation-for="CityCode" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a class="btn btn-danger">Cancle</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}