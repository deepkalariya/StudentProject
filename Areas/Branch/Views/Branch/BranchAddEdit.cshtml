@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model StudentProject.Areas.Branch.Models.BranchModel

<div class="app-main__inner">
    <div class="tabs-animation">
        <div class="mb-3 card">
            <div class="card-header-tab card-header">
                <div class="card-header-title font-size-lg text-capitalize fw-normal">
                    <i class="header-icon lnr-charts icon-gradient bg-happy-green"></i>
                    Branch
                </div>
            </div>

            <div class="card-body">
                <form method="post" asp-area="Branch" asp-controller="Branch" asp-action="Save_Branch">
                    <input type="hidden" asp-for="BranchID" />
                    <div class="mb-3">
                        <label class="form-label" for="branchName">Branch Name</label>
                        <input asp-for="BranchName" class="form-control" type="text" placeholder="Branch Name" data-sb-validations="required" />
                        <span asp-validation-for="BranchName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="branchCode">Branch Code</label>
                        <input asp-for="BranchCode" class="form-control" type="text" placeholder="Branch Code" data-sb-validations="required" />
                        <span asp-validation-for="BranchCode" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a class="btn btn-danger">Cancle</a>
                        </div>
                    </div>
                </form>
                @{
                    if (ViewData["message"] != "")
                    {
                        <div class="mt-3">
                            <span class="bg-success text-white bg-light-success fw-bold h3">
                                @ViewData["message"]
                            </span>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}